<div class="text-center">
    <h1>Pedido</h1>
</div>

<div class="row" id="pedidoLogueadoGeneral" @* style="display:none" *@>
    <div class="col-6 col-12" id="pedidoDomicilioLogueado" style="display:none">
        <label>Dirección: </label>
        <br />
        <p id="direccionPedido"> </p>
    </div>
    <br />


    <div class="col-6 col-12" id="pedidoLocalLogueado" style="display:none">
        <h3>Mesa <span id="mesaNumero"></span></h3>
    </div>
    <br />



    <div class="col-6 col-12">
        <label for="metodoPago">Método de pago: </label>
        <br />
        <select id="metodoPago" class="form-select">
            <option value="0">Efectivo</option>
            <option value="1">POS</option>
        </select>
        <br />
        <label for="comPedido">Comentario: </label>
        <br />
        <textarea id="comPedido"></textarea>
    </div>
    <br />

    <div class="col-8">
        <button id="btnPedidoLog" class="btn btn-primary btn-block margenGeneral" onclick="RealizarPedidoLog();">Realizar</button>
    </div>

</div>

<div style="display:none;">
    @Html.Hidden("URLObtenerUsuario", Url.Action("ObtenerUsuario", "Login"))
    @Html.Hidden("URLRealizarPedidoLogueado", Url.Action("RealizarPedidoLogueado", "Pedido"))
    @Html.Hidden("URLProductosActivos", Url.Action("GetProductos", "Producto"))
    @Html.Hidden("URLPantallaPrincipal", Url.Action("Index", "Home"))
</div>


<script type="text/javascript" src="~/js/pages/pedidologueado.js" asp-append-version="true"></script>

