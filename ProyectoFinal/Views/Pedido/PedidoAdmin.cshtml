<div class="text-center">
    <h1>Pedido</h1>
</div>

<div class="row" id="pedidoAdminGeneral" >
    <div class="col-6 col-12" >
        <label for="direccionPedidoAdmin">Dirección: </label>
        <br />
        <input type="text" id="direccionPedidoAdmin" /> 
    </div>
    <br />


    <div class="col-6 col-12" >
        <label for="mesaNumeroAdmin">Mesa: </label>
        <br />
        <select id="mesaNumeroAdmin" class="form-select">

        </select>
    </div>
    <br />

    <div class="col-6 col-12">
        <label for="metodoPagoAdmin">Método de pago: </label>
        <br />
        <select id="metodoPagoAdmin" class="form-select">
            <option value="0">Efectivo</option>
            <option value="1">POS</option>
        </select>
        <br />
        <label for="comPedidoAdmin">Comentario: </label>
        <br />
        <textarea id="comPedidoAdmin"></textarea>
    </div>
    <br />

    <div class="col-8">
        <button id="btnPedidoAdmin" class="btn btn-primary btn-block margenGeneral" onclick="RealizarPedidoAdmin();">Realizar</button>
    </div>

</div>

<div style="display:none;">
    @Html.Hidden("URLPantallaPrincipal", Url.Action("Index", "Home"))
    @Html.Hidden("URLGetMesas", Url.Action("GetMesas", "Mesa"))
    @Html.Hidden("URLRealizarPedidoLogueado", Url.Action("RealizarPedidoLogueado", "Pedido"))
</div>


<script type="text/javascript" src="~/js/pages/PedidoAdmin.js" asp-append-version="true"></script>
