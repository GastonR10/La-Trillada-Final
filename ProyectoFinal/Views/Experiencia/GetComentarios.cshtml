<link href="~/css/experienciasfiltrar.css" rel="stylesheet" />
<h2>Filtrar Comentarios</h2>


<div class="form-group">
    <label for="fechaInicio">Fecha Inicio:</label>
    <input type="date" id="fechaInicio" name="FechaInicio" class="form-control" />
</div>

<div class="form-group">
    <label for="fechaFin">Fecha Fin:</label>
    <input type="date" id="fechaFin" name="FechaFin" class="form-control" />
</div>

<div class="form-group">
    <label for="calificacionFiltro">Calificación:</label>
    <select id="calificacionFiltro" name="CalificacionFiltro" class="form-control">
        <option value="-1">-- Seleccionar calificación --</option>
        @for (int i = 0; i <= 10; i++)
        {
            <option value="@i">@i</option>
        }
    </select>
</div>
<div class="form-group">
    <button type="button" class="btn btn-primary" onclick="FiltrarExperiencias()">Filtrar</button>

    <button type="button" id="btnOrdenar" class="btn btn-primary" onclick="OrdenarPorCalificacion()">Ordenar por calificación <i class="fas fa-sort"></i></button>
</div>

<h2>Comentarios</h2>
<div id="comentariosList">
    <!-- Aquí se mostrarán los comentarios filtrados -->
</div>

<div style="display:none;">
    @Html.Hidden("URLFiltrarExperiencia", Url.Action("GetComentariosList", "Experiencia"))
    @Html.Hidden("URLOrdenarPorCalificacion", Url.Action("GetComentariosPorCalificacion", "Experiencia"))
</div>

<script type="text/javascript" src="~/js/pages/ExperienciaFiltrar.js" asp-append-version="true"></script>