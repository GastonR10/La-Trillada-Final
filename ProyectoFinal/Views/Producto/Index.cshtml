<script src="~/js/pages/productos.js"></script>

<div class="text-center">
    <h1>Productos</h1>
</div>
<div class="row">
    <div class="col-6 col-12">
        <label>Nombre: </label>
        <br/>
        <input type="text" id="nombreProducto" />
    </div>
    <br />
    <div class="col-6 col-12">
        <label>Foto: </label>
        <br />
        <input type="file" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-6 col-12">
        <label>Descripción: </label>
        <br />
        <input type="text" />
    </div>
    <br />
    <div class="col-6 col-12">
        <label>Tipo: </label>
        <br />
        <select>
            <option value="0">--Seleccionar--</option>
            <option value="1">Parrilla</option>
            <option value="2">Postres</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col-10"></div>
    <div class="col-2">
        <button class="btnGeneral" onclick="AgregarProducto();">Agregar</button>
    </div>

</div>
<div class="row text-center" id="divMsj" style="display:none;">
    <label id="lblMensaje"></label>
</div>

<div style="display:none;">
    @Html.Hidden("URLCreateProducto", Url.Action("Index", "CreateProducto"))
</div>

