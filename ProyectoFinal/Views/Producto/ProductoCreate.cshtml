<div class="text-center">
    <h1>Crear Producto</h1>
</div>
<div class="row">
    <div class="col-6 col-12">
        <label for="nombreProducto">Nombre: </label>
        <br />
        <input type="text" id="nombreProducto" />
    </div>
    <br />
    <div class="col-6 col-12">
        <label for="fotoProducto">Foto: </label>
        <br />
        <input type="file" id="fotoProducto" class="form-control" />
    </div>
</div>
<br />
<div class="col-6 col-12">
    <label for="precioProducto">Precio: </label>
    <br />
    <input type="text" id="precioProducto" />
</div>
<br />
<div class="row">
    <div class="col-6 col-12">
        <label for="descripcionProducto">Descripción: </label>
        <br />
<textarea name="descripcion" id="descripcionProducto" rows="5" cols="50"></textarea>
    </div>
    <br />
    <div class="col-6 col-12">
        <label for="slcTipoProducto">Tipo: </label>
        <br />
        <select id="slcTipoProducto">
        </select>
    </div>
</div>
<div class="row">
    <div class="col-6 col-sm-10"></div>
    <div class="col-6 col-sm-2">
        <button class="btn btn-primary btn-block margenGeneral " onclick="AgregarProducto();">Agregar</button>
    </div>

</div>  

<div style="display:none;">
    @Html.Hidden("URLCreateProducto", Url.Action("Create", "Producto"))
    @Html.Hidden("URLGetTiposProducto", Url.Action("GetTiposProducto", "TipoProducto"))
</div>

<script type="text/javascript" src="~/js/pages/ProductoIndex.js" asp-append-version="true"></script>